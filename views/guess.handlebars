{{>image}}
{{>guessField}}
<div class="result-wrapper">
    <h3 class="{{resultClass}}">{{resultText}}!</h3>
    <h4>This is the flag of {{solution}}.</h4>
    <div id="country-info">
        <button>LEARN MORE</button>
        <div>
            {{#if countryHasInfo}}
                {{#each countryInfo}}
                    <{{this.type}}>{{{this.text}}}</{{this.type}}>
                {{/each}}
            {{else}}
                <div class="error-box">
                    <p><i>No country information was found.</i></p>
                </div>
            {{/if}}
        </div>
    </div>
    <a href="/"><button class="app-button">TRY AGAIN?</button></a>
</div>